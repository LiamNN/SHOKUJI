<% ingredients = IngCompiler.new.turn_to_hash(@scheduled_recipes.all)%>
  <% ingredients.each do |ing| %>
    <% if ing.quantity == nil %>
      <%= ing.name.capitalize %>
    <% else %>
      <strong><%= ing.quantity %></strong> - <%= ing.name.capitalize %>
    <% end %>
      <br>
  <% end %>
<% end %>
