<div class="container p-3" style="max-width: 80%;">
  <h1 class='title' style='font-weight: 700; text-align: center'>Recipes</h1>
  <div class="p-5 d-flex row" style="align-content: center">
  <% @recipes.each do |recipe| %>
  <%= link_to recipe_path(recipe), class:'text-decoration-none col-3 p-3' do %>
          <div class='flat-card' style='box-shadow: 0 2px 2px 0 rgb(0 0 0 / 14%), 0 1px 5px 0 rgb(0 0 0 / 12%), 0 3px 1px -2px rgb(0 0 0 / 20%)'>
            <div class="flat-card-image" style='height: 250px; background-size: cover; background-position: center; background-image: url(<%= recipe.photo %>)'></div>
            <div class="flat-card-content" style='height: 100px; padding: 24px; \\'>
              <div class="flat-card-title">
                <h4 class='title' style=''>
                  <h4 class="line-clamp-2" style="font-size: 18px"><%= recipe.name.truncate(50) %></h4>
                  <p style='color: #476072;'><%= recipe.meal_time %></p>
              </div>
            </div>
          </div>
  <% end %>
  <% end %>
  </div>
</div>
