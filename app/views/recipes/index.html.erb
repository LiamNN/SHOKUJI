<div class="container p-3" style="max-width: 80%;">
  <h1 class='title pt-3' style='font-weight: 700; text-align: center'>Recipes</h1>
  <div class="p-5 d-flex row" style="align-content: center">
  <% @recipes.each do |recipe| %>
  <%= link_to recipe_path(recipe), class:'text-decoration-none col-lg-3 col-md-6 p-3' do %>
          <div class='flat-card' style='box-shadow: 0 2px 2px 0 rgb(0 0 0 / 14%), 0 1px 5px 0 rgb(0 0 0 / 12%), 0 3px 1px -2px rgb(0 0 0 / 20%); border-radius: 5%;'>
            <% if recipe.photo.nil? %>
              <div class="flat-card-image d-flex" style='height: 250px; background-size: cover; background-position: center; background-image: linear-gradient(to bottom, rgba(0, 0, 0, 0), rgba(0, 0, 0, 0.73)), url("https://scontent.fmel14-2.fna.fbcdn.net/v/t1.6435-9/fr/cp0/e15/q65/190142158_932562257539177_6924772229027277610_n.jpg?_nc_cat=108&ccb=1-5&_nc_sid=ed5ff1&efg=eyJpIjoidCJ9&_nc_ohc=Zi227EIvdxAAX8o1PbW&tn=cSAD7cv6Xl1GU-x2&_nc_ht=scontent.fmel14-2.fna&oh=8ef34d5a54662edb89609269a48f9433&oe=61D3EDDE"); flex-direction: column; border-radius: 5%;'>
                <h4 class="title line-clamp-2 pl-3 pr-3" style="font-size: 20px; margin-top: auto; font-weight: 500; color: white; text-shadow: 2px 2px 5px rgb(0 0 0 / 60%); text-align: center"><%= recipe.name.truncate(50) %></h4>
                <p style='color: #476072;'><%= recipe.meal_time %></p>
              </div>
            <% else %>
              <div class="flat-card-image d-flex" style='height: 250px; background-size: cover; background-position: center; background-image: linear-gradient(to bottom, rgba(0, 0, 0, 0), rgba(0, 0, 0, 0.73)), url(<%= recipe.photo %>); flex-direction: column; border-radius: 5%;'>
                <h4 class="title line-clamp-2 pl-3 pr-3" style="font-size: 20px; margin-top: auto; font-weight: 500; color: white; text-shadow: 2px 2px 5px rgb(0 0 0 / 60%); text-align: center"><%= recipe.name.truncate(50) %></h4>
                <p style='color: #476072;'><%= recipe.meal_time %></p>
              </div>
            <% end %>
          </div>
  <% end %>
  <% end %>
  </div>
</div>
